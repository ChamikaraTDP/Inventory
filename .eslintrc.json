{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "mocha": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": "off",
        "max-len": [
            "warn",
            {"code": 112}
        ]
    }
}
